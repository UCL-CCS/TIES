# solvation script to solvate the merged topologies .mol2
source leaprc.protein.ff14SB
source leaprc.water.tip3p
source leaprc.gaff2

loadamberparams merged.frcmod
# loadoff /cs/biomd/shunzhou/gpcr/ties/hybrid-lig/XAC~Theo/hybrid.lib
# lig = loadpdb /cs/biomd/shunzhou/gpcr/ties/hybrid-lig/XAC~Theo/hybrid.pdb
lig = loadMol2 merged.mol2
solvatebox lig TIP3PBOX 14
# fixme - this should be handled appropriately, ie the software won't understand dual topologies
addIons lig Na+ 0
addIons lig Cl- 0
savepdb lig merged_solvated.pdb
saveamberparm lig merged_solvated.top merged_solvated.crd
quit
